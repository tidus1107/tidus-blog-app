.article
  %h1.article_title= @article.title
  .article_detail
    = image_tag 'default-avatar.png'
    %div
      %p= @aritcle.user.display_name
      %p= @article.display_created_at
    .article_detail_actions
      .dropdown
        = image_tag 'actions.svg', class: 'dropdown'
        .dropdown-content.mini
          = link_to '編集する', edit_article_path(@article)
          = link_to '削除する', article_path(@article),data: {method: 'delete', confirm: '本当に削除しますか？'}
  .ariticle_content
    = @article.content
  .article_heart
    = image_tag 'heart.svg'

.container
  = link_to new_article_comment_path(@article) do
    .btn-secondary
      コメントを追加