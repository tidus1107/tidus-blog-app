<!DOCTYPE html>
<html>
  <head>
    <title>TidusBlogApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name= "viewport" content = "width=device-width,initial-scala=1.0">
    <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
  </head>

  <body>
    <header class ="header">
    <div class="header_logos">
    <% if !current_page?('/') %>
      <%= link_to :back do %>
        <%= image_tag 'back.svg', class: 'header_back' %>
      <% end %>
    <% end %>
      <p class="header_pageTitle">BlogApp</p>
    </div>
      <%# <p class="header_pageTitle">新着記事</p> %>
      <% if user_signed_in? %>
      <div class="dropdown">
        <%= image_tag current_user.avatar_image,class:'header_avatar dropbtn' %>
        <div class="dropdown-content">
          
        <%= link_to 'プロフィール', profile_path %>
        <%= link_to 'ログアウト', destroy_user_session_path, data:{ method: 'delete' }%>
          <%# <a href="#">ログアウト</a> %>
        <% else %> 
          <%= link_to 'ログイン', new_user_session_path, class: 'header_loginBtn' %>
      <% end %>    
        </div>
      </div>
    </header>
    <% if flash.present? %>
      <div class="flash">
        <% flash.each do |key,value| %>
          <div class ="<%= key %>"><%= value %></div>
        <% end %>
      </div>
    <% end %>
    <%= yield %>
  </body>
</html>
